{
    "manifest_version": 2,
    "name": "Total Recall",
    "description": "This extension processes and stores articles",
    "version": "1.0",
    "background": {
        "scripts": ["config.js", "background.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "tabs",
        "webNavigation",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": {
            "48": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["config.js", "content.js"]
        }
    ]
}
